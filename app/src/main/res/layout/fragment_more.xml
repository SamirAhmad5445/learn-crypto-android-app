<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/container_padding"
    android:paddingRight="@dimen/container_padding"
    tools:context=".HomeFragment"
    tools:ignore="HardcodedText,UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_32"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corners_2xl"
            android:layout_marginVertical="@dimen/space_4"
            android:backgroundTint="@color/primary_900">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="@dimen/space_2">

                <TextView
                    android:id="@+id/profile_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="user name"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/text_3xl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="user email"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_xl"
                    android:textColor="@color/neutral_100"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_8"
            android:layout_marginTop="@dimen/space_2">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/space_0_5"
                android:background="@color/muted_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="SCORE"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_user_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="0"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_8"
            android:layout_marginTop="@dimen/space_2">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/space_0_5"
                android:background="@color/muted_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="LEVEL"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="0"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_8"
            android:layout_marginTop="@dimen/space_2">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/space_0_5"
                android:background="@color/muted_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="FINISHED LESSOS"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_user_lessons_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="0"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_8"
            android:layout_marginTop="@dimen/space_2">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/space_0_5"
                android:background="@color/muted_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="CORRECT QUESTIONS"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_user_questions_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_2"
                android:text="0"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:background="@color/neutral_950"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <Button
            android:id="@+id/profile_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:backgroundTint="@color/neutral_100"
            android:textColor="@color/neutral_900"
            android:textSize="@dimen/text_lg"
            android:padding="@dimen/space_3"
            android:layout_marginTop="@dimen/space_2"
            />

        <Button
            android:id="@+id/profile_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:backgroundTint="@color/neutral_100"
            android:textColor="@color/neutral_900"
            android:textSize="@dimen/text_lg"
            android:padding="@dimen/space_3"
            android:layout_marginTop="@dimen/space_2"
            />

        <Button
            android:id="@+id/profile_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign out"
            android:backgroundTint="@color/danger_500"
            android:textColor="@color/neutral_100"
            android:textSize="@dimen/text_lg"
            android:padding="@dimen/space_3"
            android:layout_marginTop="@dimen/space_2"
            />

        <Button
            android:id="@+id/profile_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/text_neutral"
            android:textSize="@dimen/text_lg"
            />


    </LinearLayout>

</ScrollView>