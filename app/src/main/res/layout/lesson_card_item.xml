<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lesson_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_36"
    android:backgroundTint="@color/neutral_100"
    android:layout_marginVertical="@dimen/space_3"
    android:layout_marginHorizontal="@dimen/space_6"
    app:cardCornerRadius="@dimen/corners_xl"
    tools:ignore="HardCodedText,UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_4"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/lesson_card_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/space_2"
            android:text="Affine Cipher: Combining Caesar Cipher and Modular Arithmetic"
            android:textColor="@color/neutral_800"
            android:textSize="@dimen/text_xl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_2"
            android:clipToPadding="false"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corners_lg"
                android:backgroundTint="@color/primary_300"
                android:layout_marginRight="@dimen/space_2"
                android:layout_marginEnd="@dimen/space_2">

                <TextView
                    android:id="@+id/lesson_card_level"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/space_2"
                    android:paddingVertical="@dimen/space_1"
                    android:text="level 5"
                    android:textColor="@color/primary_900"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/lesson_card_is_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corners_lg"
                android:backgroundTint="@color/secondary_200"
                android:layout_marginRight="@dimen/space_2"
                android:layout_marginEnd="@dimen/space_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="finished"
                    android:paddingVertical="@dimen/space_1"
                    android:paddingHorizontal="@dimen/space_2"
                    android:textColor="@color/secondary_900"
                    android:textStyle="bold"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/lesson_card_is_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corners_lg"
                android:backgroundTint="@color/primary_200"
                android:layout_marginRight="@dimen/space_2"
                android:layout_marginEnd="@dimen/space_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="success"
                    android:paddingVertical="@dimen/space_1"
                    android:paddingHorizontal="@dimen/space_2"
                    android:textColor="@color/primary_950"
                    android:textStyle="bold"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/lesson_card_is_failed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corners_lg"
                android:backgroundTint="@color/danger_200"
                android:layout_marginRight="@dimen/space_2"
                android:layout_marginEnd="@dimen/space_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="failed"
                    android:paddingVertical="@dimen/space_1"
                    android:paddingHorizontal="@dimen/space_2"
                    android:textColor="@color/danger_900"
                    android:textStyle="bold"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>